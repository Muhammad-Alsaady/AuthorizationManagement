@model UserClaimsViewModel

@{
    ViewData["Title"] = "Manage User Claims";
}

<form method="post" asp-action="ManageUserRole">
    @* <input type="hidden" asp-for="@roleId" /> *@

    <div class="card">
        <div class="card-header">
            <h2>Add or Remove Roles for this User</h2>
        </div>

        <div class="card-body">
                      
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">

                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }

        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="card-foter m-3">
            <button type="submit" class="btn btn-primary" asp-action="ManageUserClaim" asp-route-userId="@Model.userId"
                    style="width:auto">
                Update
            </button>
            <a asp-action="EditUser" asp-route-id="@Model.userId" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>
