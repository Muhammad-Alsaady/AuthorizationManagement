@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "Add or Remove Users";
    var roleId = ViewBag.roleId;
}



<form method="post" asp-action="EditUserInRole">
    <input type="hidden" asp-for="@roleId" />

    <div class="card">
        <div class="card-header">
            <h2>Add or Remove Users form this Role</h2>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">

                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        
        <div class="card-foter m-3">
            <button type="submit"  class="btn btn-primary" asp-action="EditUserInRole" style="width:auto">Update</button>
            <a asp-action="EditRole" asp-route-Id="@roleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>